<Window x:Class="CodeFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeFirst"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label MouseDoubleClick="Label_MouseDoubleClick" Name="lbCoolapsed" Background="Green" Content="TreeView Only BaseitmesLoaded"/>
        <TreeView Grid.Row="1"  x:Name="TrvHospital" MouseDoubleClick="TrvHospital_MouseDoubleClick"/>
        <Canvas Grid.Column="1" Grid.Row="1" Background="Black"/>
    </Grid>
</Window>
